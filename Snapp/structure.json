{
	"menu": {
        "items": [
            {
                "title": "Other",
                "icon": "other.png",
                "screen-id": "following"
            },
			{
				"title": "Home",
				"icon": "home.png",
				"screen-id": "repos"
			}
		]
	},
	"screens": [
		{
			"id": "repos",
            "type": "table",
            "query": "query {viewer {repositories(last: 10) {nodes {name,description}}}}",
            "path-to-list": "data.viewer.repositories.nodes",
            "cell-keys": {
                "title": "name",
                "subtitle": "description"
            }
		},
        {
            "id": "following",
            "type": "table",
            "query": "{viewer {following(first: 10) {nodes {name,avatarUrl,company}}}}",
            "path-to-list": "data.viewer.following.nodes",
            "cell-keys": {
                "title": "name",
                "imageUrl": "avatarUrl",
                "subtitle": "company"
            }
        },
        {
            "id": "person",
            "type": "details-stack",
            "title":"username",
            "query": "{user(login:\"<username>\") {id, name, bio, company, email, organizations(first: 10) {edges {node {id,name}}}}}",
            "params": ["username", "image", "title"],
            "path-to-details": "data.user",
            "stackItems": [
                {
                    "type": "stackCellTitle",
                    "title": "name"
                }
            ]
        }
	]
}
