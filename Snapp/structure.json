{
	"menu": {
        "items": [
            {
                "title": "Other",
                "icon": "other.png",
                "screenId": "following"
            },
			{
				"title": "Home",
				"icon": "home.png",
				"screenId": "repos"
			}
		]
	},
	"screens": [
		{
			"id": "repos",
            "type": "table",
            "query": "query {viewer {repositories(last: 20) {nodes {name,description}}}}",
            "pathToList": "data.viewer.repositories.nodes",
            "cellKeys": {
                "title": "name",
                "subtitle": "description"
            }
		},
        {
            "id": "following",
            "type": "table",
            "query": "{viewer {following(first: 20) {nodes {name,avatarUrl,company,login}}}}",
            "pathToList": "data.viewer.following.nodes",
            "cellKeys": {
                "title": "name",
                "imageUrl": "avatarUrl",
                "subtitle": "company"
            },
            "cellTapAction": {
                "screenId": "person",
                "params": {
                    "title": "login"
                }
            }
        },
        {
            "id": "person",
            "type": "details-stack",
            "title":"username",
            "query": "{user(login:\"<username>\") {id, name, bio, company, email, organizations(first: 10) {edges {node {id,name}}}}}",
            "params": ["username"],
            "pathToDetails": "data.user",
            "stackItems": [
                {
                    "type": "label",
                    "textKey": "company"
                }
            ]
        }
	]
}
